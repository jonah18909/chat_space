.chat-main__body--messages-list
  .chat-main__message.clearfix
    .chat-main__message-name
      = message.user.name
    .chat-main__message-time
      = message.created_at.strftime("%Y-%m-%d %H:%M:%S")
    .chat-main__message-body
      - if message.text.present?
        %p.chat-main__message-text
          = message.text
      = image_tag message.image_url, class: 'chat-main__message-image' if message.image.present?
