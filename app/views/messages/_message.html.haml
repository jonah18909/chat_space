.chat-main__message.clearfix{"data-message-id": message.id}
  .chat-main__message-name
    = message.user.name
  .chat-main__message-time
    = message.created_at.strftime("%Y-%m-%d %H:%M:%S")
  .chat-main__message-body
    - if message.text.present?
      %p.chat-main__message-text
        = message.text
      .chat-main__message-image
    = image_tag message.image.url if message.image.present?

