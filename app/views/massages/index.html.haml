        = @messages
        ::after
      .chat-main__message.clearfix{data: {id: '2'}}
        .chat-main__message-name
        James
        .chat-main__message-time
        2017/12/27 14:38:57
        .chat-main__message-body
        @messages
        ::after
  .chat-main__footer
    %form#new_message.chat-main__footer-form{ enctype: 'multipart/form-data', action: '/groups/1/messages', accept-charset="UTF-8", method: :post }
      %input



