      .chat-side__user-name seo
      %a{href: '/groups/new', class: "chat-side__user--new--group"}
        %i.fa.fa-pencil-square-o
          ::before
      %a{href: '/users/edit', class: "chat-side__user--edit-user"}
        %i.fa.fa-fa-cog
          ::before
  .chat-side__groups
    .chat-side__groupes-list
      %a{href: ''}
        .chat-side__group
          .chat-side__group-name
            sample
          .chat-side__group-message
            = @messages
